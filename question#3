// printing numbers in fibonacci series.
//code written by Ali Turi.
#include<iostream>
using namespace std;

int main()
{  
    /*Def: of fibonacci: A series of numbers in which each number
     (fibonaci number)is the sum of two preceding numbers.*/
    int x, L1 =0, L2 =1, nextTerm = 0;
    cout<< "Enter the number of terms "<<endl;
    cin>>x;
    cout<<"Fibonacci Series "<<endl;
    for(int i=1 ; i<= x; ++i )
    {
        //Print the first two terms.
        if(i== 1)
        {
            cout<<L1<<", ";
            continue;
        }
        if(i==2)
    {
        cout<<L2<<", ";
        continue;
    }
    nextTerm = L1+L2;
    L1=L2;
    L2=nextTerm;
    cout<< nextTerm<<", ";  
      }
    return 0;
}
